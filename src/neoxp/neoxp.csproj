<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <Description>neo-express is a Neo developer blockchain tool</Description>
    <PackageId>Neo.Express</PackageId>
    <PackAsTool>true</PackAsTool>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="4.1.0" />
    <PackageReference Include="Nito.Disposables" Version="2.4.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\neo-blockchaintoolkit-library\neo-blockchaintoolkit-library.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="DBFTPlugin">
      <HintPath>..\..\Plugins\DBFTPlugin\DBFTPlugin.dll</HintPath>
    </Reference>
    <Reference Include="RpcClient">
      <HintPath>..\..\Plugins\RpcClient\RpcClient.dll</HintPath>
    </Reference>
    <Reference Include="RpcServer">
      <HintPath>..\..\Plugins\RpcServer\RpcServer.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>